{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>InFront</th>
                <td>{{ service.inFront ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>Validity</th>
                <td>{{ service.validity ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('service_admin_index') }}">back to list</a>

    <a href="{{ path('service_admin_edit', {'id': service.id}) }}">edit</a>

    {{ include('admin/service/_delete_form.html.twig') }}
{% endblock %}
