{% extends 'base.html.twig' %}

{% block title %}Provider{% endblock %}

{% block body %}
    <h1>Provider</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ provider.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ provider.email }}</td>
            </tr>
            <tr>
                <th>AdresseNum</th>
                <td>{{ provider.adresseNum }}</td>
            </tr>
            <tr>
                <th>AdresseStreet</th>
                <td>{{ provider.adresseStreet }}</td>
            </tr>
            <tr>
                <th>InscriDate</th>
                <td>{{ provider.inscriDate ? provider.inscriDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EmailContact</th>
                <td>{{ provider.emailContact }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ provider.name }}</td>
            </tr>
            <tr>
                <th>PhoneNumb</th>
                <td>{{ provider.phoneNumb }}</td>
            </tr>
            <tr>
                <th>TvaNumb</th>
                <td>{{ provider.tvaNumb }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ provider.website }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    {% for category in provider.category %}
                        {{ category.name }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Internship</th>
                <td>
                    <td>
                        {% for internship in provider.internships %}
                           <!-- <a href="{#{{ path('internship_show', {'id': internship.id}) }}" >{{ internship.name }}#}</a>-->
                        {% endfor %}
                    </td>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('provider_profile_edit', {'id': provider.id}) }}">edit</a>

{% endblock %}
