{% extends 'base.html.twig' %}

{% block title %}Provider{% endblock %}

{% block body %}
    <h1>Provider</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ provider.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ provider.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ provider.roles ? provider.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ provider.password }}</td>
            </tr>
            <tr>
                <th>AdresseNum</th>
                <td>{{ provider.adresseNum }}</td>
            </tr>
            <tr>
                <th>AdresseStreet</th>
                <td>{{ provider.adresseStreet }}</td>
            </tr>
            <tr>
                <th>Banned</th>
                <td>{{ provider.banned ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Identifiant</th>
                <td>{{ provider.identifiant }}</td>
            </tr>
            <tr>
                <th>InscrActivated</th>
                <td>{{ provider.inscrActivated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>InscriDate</th>
                <td>{{ provider.inscriDate ? provider.inscriDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UnsucessfulTry</th>
                <td>{{ provider.unsucessfulTry ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>UserType</th>
                <td>{{ provider.userType }}</td>
            </tr>
            <tr>
                <th>EmailContact</th>
                <td>{{ provider.emailContact }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ provider.name }}</td>
            </tr>
            <tr>
                <th>PhoneNumb</th>
                <td>{{ provider.phoneNumb }}</td>
            </tr>
            <tr>
                <th>TvaNumb</th>
                <td>{{ provider.tvaNumb }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ provider.website }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    {% for category in provider.category %}
                        {{ category.name }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Internship</th>
                <td>
                    {% for internship in provider.internships %}
                        {{ internship.name }}
                    {% endfor %}
                </td>
        </tbody>
    </table>

    <a href="{{ path('provider_index') }}">back to list</a>

    <a href="{{ path('provider_edit', {'id': provider.id}) }}">edit</a>

    {{ include('provider/_delete_form.html.twig') }}
{% endblock %}
