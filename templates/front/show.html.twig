{% extends 'base.html.twig' %}

{% block title %}Provider{% endblock %}

{% block body %}
    <h1>Provider</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ provider.email }}</td>
            </tr>
            <tr>
                <th>AdresseNum</th>
                <td>{{ provider.adresseNum }}</td>
            </tr>
            <tr>
                <th>AdresseStreet</th>
                <td>{{ provider.adresseStreet }}</td>
            </tr>

            <tr>
                <th>EmailContact</th>
                <td>{{ provider.emailContact }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ provider.name }}</td>
            </tr>
            <tr>
                <th>PhoneNumb</th>
                <td>{{ provider.phoneNumb }}</td>
            </tr>
            <tr>
                <th>TvaNumb</th>
                <td>{{ provider.tvaNumb }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ provider.website }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    {% for category in provider.category %}
                        <a href="{{ path('service_front_show', {'id': category.id}) }}">{{ category.name }}</a>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Internship</th>
                <td>
                    <td>
                        {% for internship in provider.internships %}
                            {{ internship.name }}
                        {% endfor %}
                    </td>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('provider_front_index') }}">back to list</a>

{% endblock %}
